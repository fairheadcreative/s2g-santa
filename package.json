{
  "name": "smtp2go-santas-letter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "rm -r ./node_modules/.cache/vue-loader/ ; vue-cli-service build",
    "build:stats": "rm -r ./node_modules/.cache/vue-loader/ ; vue-cli-service build --report-json",
    "lint:eslint": "cross-env NODE_ENV=production vue-cli-service lint",
    "lint:stylelint": "cross-env NODE_ENV=production stylelint --fix '**/*.{vue,css,sass,scss}'",
    "lint": "run-s lint:*",
    "prepare": "husky install ./husky",
    "deploy": "cross-env NODE_ENV=gh-pages npm run build && gh-pages -d dist"
  },
  "dependencies": {
    "core-js": "^3.10.1",
    "lodash": "^4.17.21",
    "modern-normalize": "^1.1.0",
    "vue": "^3.2.21",
    "vue-cli-plugin-svg": "^0.2.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.15",
    "@vue/cli-plugin-eslint": "^4.5.15",
    "@vue/cli-service": "^4.5.15",
    "@vue/compiler-sfc": "^3.2.21",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "babel-eslint": "^10.1.0",
    "babel-plugin-lodash": "^3.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^7.8.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.1",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "raw-loader": "^4.0.2",
    "sass": "^1.32.8",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.12.0",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-webpack-plugin": "^2.1.1"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "vue-cli-service lint"
    ],
    "*.{vue,css,sass,scss}": [
      "stylelint --fix --allow-empty-input"
    ]
  }
}
